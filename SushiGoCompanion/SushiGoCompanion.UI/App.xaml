                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid VerticalAlignment="Top" Height="52">
                    <Ellipse x:Name="NormalRectangle"
                        Fill="{ThemeResource CheckBoxBackgroundUnchecked}"
                        Stroke="{ThemeResource CheckBoxCheckBackgroundStrokeUnchecked}"
                        StrokeThickness="{ThemeResource CheckBoxBorderThemeThickness}"
                        UseLayoutRounding="False"
                        Height="30"
                        Width="30" />
                    <Ellipse x:Name="FilledRectangle"
                        Fill="{StaticResource PrimaryColourBrush}"
                        UseLayoutRounding="False"
                        Height="0"
                        Width="0" />
                    <FontIcon x:Name="CheckGlyph"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        Glyph="&#xE001;"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{ThemeResource CheckBoxCheckGlyphForegroundUnchecked}"
                        Opacity="0" />
                </Grid>
                <ContentPresenter x:Name="ContentPresenter"
                    ContentTemplate="{TemplateBinding ContentTemplate}"
                    ContentTransitions="{TemplateBinding ContentTransitions}"
                    Content="{TemplateBinding Content}"
                    Margin="4,0,0,0"
                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    AutomationProperties.AccessibilityView="Raw"
                    TextWrapping="Wrap"
                    FontSize="18"/>
            </Grid>
        </ControlTemplate>

